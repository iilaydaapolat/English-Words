<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".Activitykelimekaydet">

    <EditText
        android:id="@+id/turkce"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/ovaal"
        android:ems="10"
        android:hint="Turkish word"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonkaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingilizce" />

    <Button
        android:id="@+id/buttonkaydet"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="189dp"
        android:background="@drawable/oval"
        android:onClick="button"
        android:text="KAYDET"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turkce" />

    <EditText
        android:id="@+id/ingilizce"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/ovaal"
        android:ems="10"
        android:hint="English word"
        android:inputType="textPersonName"
        android:shadowRadius="@dimen/cardview_default_radius"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/turkce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>